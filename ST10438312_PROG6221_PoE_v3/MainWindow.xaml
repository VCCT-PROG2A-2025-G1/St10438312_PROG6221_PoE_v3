<Window x:Class="ST10438312_PROG6221_PoE_v3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10438312_PROG6221_PoE_v3"
        mc:Ignorable="d"
      Height="800" Width="1200"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#36393F"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
            Background="#252525"
            MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <Label Content="CyberSecurity Awarness Bot"
                       HorizontalAlignment="Center"
                   Foreground="LightGray"
                   FontWeight="SemiBold"/>

                <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">

                    <Button Width="20" Height="20"
                        Content="🗕"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,3"
                        Click="ButtonMinimize_Click"/>

                    <Button Width="20" Height="20"
                        Content="✕"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ButtonExit_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <Grid Background="#252525" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Margin="0,77,0,0">
                <RadioButton x:Name="ChatbotRadio" 
                             Content="Chatbot"
                             Height="50"
                             Foreground="White" 
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             GroupName="Views"
                             Checked="RadioButton_Checked"/>

                <RadioButton x:Name="QuizRadio" 
                             Content="Quiz"
                             Height="50"
                             Foreground="White" 
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             GroupName="Views"
                             Checked="RadioButton_Checked"/>

                <RadioButton x:Name="ChatLogRadio" 
                             Content="Chat Log"
                             Height="50"
                             Foreground="White" 
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             GroupName="Views"
                             Checked="RadioButton_Checked"/>
                <RadioButton x:Name="HelpRadio" 
                             Content="Task"
                             Height="50"
                             Foreground="White" 
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             GroupName="Views"
                             Checked="RadioButton_Checked"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border>
                <Grid HorizontalAlignment="Stretch" Background="#2F3136" Margin="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,10">
                        <TextBlock Text="&#xE99A;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="48" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <Label x:Name="ViewTitle" Content="Chatbot"
                               Background="#2F3136"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="48"
                               Padding="0" FontFamily="Cascadia Code"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main content area where views will be swapped -->
            <Grid x:Name="MainContent" Grid.Row="1" Background="#36393F">
                <!-- Default Chatbot View -->
                <ScrollViewer x:Name="ChatScrollViewer" 
                              Visibility="Visible"
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Background="#36393F"
                              Padding="15,10">
                    <StackPanel x:Name="ChatPanel" Orientation="Vertical"/>
                </ScrollViewer>

                <!-- Quiz View -->
                <StackPanel x:Name="QuizView" 
                           Visibility="Collapsed"
                           Background="#36393F">

                    <Label Content="Quiz Results &amp; Overview" 
                       HorizontalAlignment="Left"
                       Height="79"
                       Margin="10,22,0,0"
                       VerticalAlignment="Top" 
                       Width="834" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="White"/>
                    <Rectangle 
                            HorizontalAlignment="Left" 
                            Height="532" 
                            Margin="40,155,0,0" 
                            Stroke="Black" 
                            VerticalAlignment="Top" Width="423"/>
                    <Rectangle 
                            HorizontalAlignment="Left"
                            Height="532" Margin="623,155,0,0" Stroke="Black" VerticalAlignment="Top" Width="423"/>
                    <Label Content="Multi-Choice Report"
                           HorizontalAlignment="Left"
                           Height="58" Margin="55,171,0,0"
                           VerticalAlignment="Top"
                           Width="390"
                           FontSize="36"
                           Foreground="White"
                           FontFamily="Bahnschrift SemiBold"/>
                    <Label Content="True or False Report"
                           HorizontalAlignment="Left" 
                           Height="58"
                           Foreground="White"
                           Margin="641,171,0,0" 
                           VerticalAlignment="Top"
                           Width="391" FontSize="36"
                           FontFamily="Bahnschrift SemiBold"/>
                    <Rectangle HorizontalAlignment="Left" Height="74" Margin="40,155,0,0" Stroke="Black" VerticalAlignment="Top" Width="423"/>
                    <Rectangle HorizontalAlignment="Left" Height="74" Margin="623,155,0,0" Stroke="Black" VerticalAlignment="Top" Width="423"/>
                    <Border BorderBrush="Black" BorderThickness="1" Background="#3e4147" HorizontalAlignment="Left" Height="458" Margin="40,229,0,0" VerticalAlignment="Top" Width="423"/>
                    <Border BorderBrush="Black" BorderThickness="1" Background="#3e4147" HorizontalAlignment="Left" Height="458" Margin="623,229,0,0" VerticalAlignment="Top" Width="423"/>

                </StackPanel>

                <!-- Chat Log View -->
                <StackPanel x:Name="ChatLogView" 
                           Visibility="Collapsed"
                           Background="#36393F">
                   
                    <TextBlock Text="Chat Log View Content" Foreground="White"/>
                </StackPanel>

                <!-- Help View -->
                <StackPanel x:Name="HelpView" 
                           Visibility="Collapsed"
                           Background="#36393F"
                           Margin="10">

                    <!-- Help Title -->
                    <Label Content="Task Management Help" 
                           HorizontalAlignment="Left"
                           FontSize="36" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,10,0,20"/>

                    <!-- Main Content Area -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <!-- Spacer -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel - Add New Task -->
                        <Border Grid.Column="0"
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                Background="#3e4147"
                                CornerRadius="4"
                                Padding="15">
                            <!-- Add Task Section -->
                            <StackPanel Margin="10">
                                <Label Content="Add New Task"
                                       FontSize="24"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>

                                <!-- Task Title -->
                                <TextBlock Text="Title:" 
                                           Foreground="#B9BBBE" 
                                           FontSize="16"
                                           Margin="0,5,0,0"/>
                                <TextBox x:Name="TaskTitleTextBox"
                                         Background="#484B51"
                                         Foreground="White"
                                         BorderThickness="0"
                                         Margin="0,5,0,15"
                                         Padding="8"/>

                                <!-- Task Description -->
                                <TextBlock Text="Description:" 
                                           Foreground="#B9BBBE" 
                                           FontSize="16"
                                           Margin="0,5,0,0"/>
                                <TextBox x:Name="TaskDescriptionTextBox"
                                         Background="#484B51"
                                         Foreground="White"
                                         BorderThickness="0"
                                         Margin="0,5,0,15"
                                         Padding="8"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinHeight="80"/>

                                <!-- Reminder Date/Time -->
                                <TextBlock Text="Reminder Date/Time:" 
                                           Foreground="#B9BBBE" 
                                           FontSize="16"
                                           Margin="0,5,0,0"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Date Picker -->
                                    <DatePicker x:Name="TaskReminderDatePicker"
                                                Background="#484B51"
                                                Foreground="Black"
                                                BorderThickness="0"
                                                Padding="8"
                                                SelectedDateFormat="Short"/>

                                    <!-- Time Picker -->
                                    <ComboBox x:Name="TaskReminderTimePicker"
                                              Grid.Column="2"
                                              Background="#484B51"
                                              Foreground="Black"
                                              BorderThickness="0"
                                              Padding="8"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"/>
                                </Grid>

                                <!-- Add Task Button -->
                                <Button Content="Add Task"
            Background="#7289DA"
            Foreground="White"
            FontWeight="Bold"
            BorderThickness="0"
            Padding="10,5"
            HorizontalAlignment="Right"
            Margin="0,15,0,0"
            Click="AddTaskButton_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Right Panel - Task List -->
                        <Border Grid.Column="2"
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                Background="#3e4147"
                                CornerRadius="4">
                            <StackPanel>
                                <Label Content="Your Tasks"
                                       FontSize="24"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="15,15,15,10"/>

                                <!-- Task List -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              MaxHeight="400">
                                    <ItemsControl x:Name="TasksItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#484B51" CornerRadius="4" Margin="10,5" Padding="10">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Task Title -->
                                                        <TextBlock Text="{Binding Title}"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="18"
                       Grid.Row="0"/>

                                                        <!-- Task Description -->
                                                        <TextBlock Text="{Binding Description}"
                       Foreground="#B9BBBE"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"
                       Grid.Row="1"/>

                                                        <!-- Reminder Date/Time -->
                                                        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,0">
                                                            <TextBlock Text="⏰ " Foreground="#7289DA"/>
                                                            <TextBlock Text="{Binding ReminderDate}" Foreground="#B9BBBE"/>
                                                            <TextBlock Text=" at " Foreground="#B9BBBE"/>
                                                            <TextBlock Text="{Binding ReminderTime}" Foreground="#B9BBBE"/>
                                                        </StackPanel>

                                                        <!-- Time Remaining -->
                                                        <TextBlock Text="{Binding TimeRemaining}"
                       Foreground="#7289DA"
                       FontStyle="Italic"
                       Margin="0,5,0,0"
                       Grid.Row="3"/>

                                                        <!-- Action Buttons -->
                                                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.RowSpan="4">
                                                            <Button Content="✓" Width="30" Height="30" Background="#43B581" 
                        Foreground="White" Margin="0,0,5,0" Click="CompleteTaskButton_Click"
                        Tag="{Binding Id}"/>
                                                            <Button Content="✕" Width="30" Height="30" Background="#F04747" 
                        Foreground="White" Click="DeleteTaskButton_Click"
                        Tag="{Binding Id}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Input area (only visible in Chatbot view) -->
            <Grid Grid.Row="2" x:Name="InputArea">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox"
                         Grid.Row="1"
                         Height="50"
                         Text=""
                         Style="{StaticResource MessageBox}"
                         Grid.ColumnSpan="2"/>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1"
                        Margin="0,0,16,0"/>

                <Button Grid.Column="1" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Padding="16,12"
                        VerticalAlignment="Stretch"
                        Cursor="Hand"
                        Name="SendButton" Focusable="False" Click="SendButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE724;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>